<aside class="text-lg w-1/5 flex flex-col">
  <a href="/">
    <img class="inline w-8 m-1" src="{{ asset(path='logo.svg') }}" alt="logo" />
  </a>
  {% if (app.user) %}
    <span class="text-slate-600">{{ app.user.nickname }}</span>
    <a class="text-slate-400 hover:text-slate-600" href="/user/{{app.user.nickname}}">Profile</a>
    <a class="text-slate-400 hover:text-slate-600" href="/logout">Logout</a>
  {% else %}
    <a class="text-slate-400 hover:text-slate-600" href="/login">Login</a>
    <a class="text-slate-400 hover:text-slate-600" href="/register">Register</a>
  {% endif %}
</aside>
