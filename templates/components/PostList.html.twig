<div class="flex flex-col gap-2" {{ attributes }}>
  {% for post in this.posts|reverse %}
    <div class="text-slate-800 bg-slate-100 p-2 border-l-5 border-slate-300">
      <div class="flex flex-row place-content-between">
	<span class="font-bold">{{ post.author.nickname }}</span>
	<div class="select-none w-fit text-right p-1 rounded border border-slate-300">{{ post.topic.value }}</div>
      </div>

      <span>{{ post.content|nl2br }}</span>

      <div class="text-slate-500 text-right">{{ post.postedOn|date }}</div>
    </div>
  {% endfor %}

